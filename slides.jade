 
// A quick sample presentation in showboat  
// Note: nice Jade bundles are available for both vim and textmate

.slide
  .title Title slide
  
  .include.fullscreen(src='svg/title.svg')
  
  // #showboat and #tagline are defined in the svg
  .build fade_in(#title)
  .build fade_in(#tagline)
  

// Keyboard shortcut tour

.slide
  .title Keyboard shortcuts
  
  .include.fullscreen(src='svg/keyboard.svg')
  
  .build fade_in(#T)
  
  .build
    | opacity(#T, 0.25)
    | fade_in(#C)
  
  .build
    | opacity(#C, 0.25)
    | fade_in(#E)
  
  .build
    | opacity(#E, 0.25)
    | fade_in(#arrows)


